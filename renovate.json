{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeType": "branch",
  "extends": [
    "github>cusanity/docker-koreader"
  ],
  "ignoreTests": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "docker-action",
      "matchPackagePatterns": [
        "docker"
      ]
    },
    {
      "matchPackagePatterns": [
        "renovate"
      ],
      "schedule": [
        "* 16 * * 0"
      ]
    },
    {
      "description": "Only allow arm64 variants for base images",
      "matchPackagePatterns": [
        "baseimage-selkies"
      ],
      "allowedVersions": "/arm64/"
    }
  ],
  "pinDigests": true,
  "platformAutomerge": true,
  "rebaseWhen": "auto"
}