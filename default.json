{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchDepPatterns": [
        "koreader/koreader"
      ],
      "versioning": "regex:^v?(?<major>\\d+)(\\.0?(?<minor>\\d+))(\\.(?<patch>\\d+))?"
    },
    {
      "matchDepPatterns": [
        "ghcr.io/cusanity/koreader"
      ],
      "versioning": "regex:^v(?<major>\\d+)(\\.0?(?<minor>\\d+))(\\.(?<patch>\\d+))?-(?<compatibility>.+)"
    }
  ]
}